# Multi-Container SLAM Configuration
# ROS2 Domain ID for inter-container communication
ROS_DOMAIN_ID=0

# RMW Implementation - using CycloneDX for better networking
RMW_IMPLEMENTATION=rmw_cyclonedx_cpp

# Display configuration for GUI
DISPLAY=:0

# Backend connection settings
SLAM_BACKEND_ADDRESS=tcp://slam-backend:5555

# PX4 integration settings
PX4_CONNECTION=udp://:14540

# UCI interface settings
UCI_COMMAND_PORT=5555
UCI_TELEMETRY_PORT=5556

# Enable/disable components
ENABLE_PX4=false
ENABLE_UCI=false
